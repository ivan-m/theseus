name:                theseus
version:             0.1.0
synopsis:            Generics-based efficient binary serialisation/deserialisation
description:         Store data without needing to explicitly define how to do so.
license:             MIT
license-file:        LICENSE
author:              Ivan Lazar Miljenovic
maintainer:          Ivan.Miljenovic@gmail.com
copyright:           Ivan Lazar Miljenovic, Patryk Zadarnowski
category:            Data
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

library
  exposed-modules:     Data.Theseus
                     , Data.Theseus.Values
  build-depends:       base >=4.9 && <4.10
                     , bytestring
                     , storable-endian
  hs-source-dirs:      src
  default-language:    Haskell2010

  ghc-options:         -Wall

test-suite properties
  type:                exitcode-stdio-1.0
  main-is:             propTests.hs
  build-depends:       theseus
                     , base
                     , bytestring
                     , QuickCheck >= 2.5 && < 2.10
                     , hspec >= 2.1 && < 2.4
                     , storable-endian
  hs-source-dirs:      test
  default-language:    Haskell2010

  ghc-options:         -Wall
